    </div>
    
    <!-- site-main -->
    <div class="site-main mt-4">
        <div class="container-fluild">
            <div class="product_cart row">
                <div class="product-img col-md-6">
                    <div class="slideshow-container">
                        <div class="mySlides fade">
                            <img src="/images/img_watch/img-watch-series-3/watch-3-1.jpg" width="500px" height="550px">
